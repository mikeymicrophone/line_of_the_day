<% div_for question, :class => 'borderedbox' do %>
  <%= voting_booth question %>
	<%= question.name %>
	<%= link_to_comment_section_for question %>
	<%= tag_display question %>
	<% if current_user.andand.admin? %>
	  [<%= link_to 'x', question_path(question), :method => :delete, :title => 'delete' %>]
	<% end %>
	<%= tagger question %>
	<% div_for(question, 'tags', :style => 'display:none') {} %>
	<%= comment_section_for question %>
<% end %>
<%= draggable_and_droppable_for question %>