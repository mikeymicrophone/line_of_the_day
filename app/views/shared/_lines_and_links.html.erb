<% form_for Line.new do |f| %>
  <%= f.text_field :text, :size => 40 %>
  <%= f.text_area :context, :size => '20x2' %>
  <%= f.submit :save %>
<% end %>
<% unless current_user %>
  <%= link_to "Register!", new_user_path %> |
  <%= link_to "Log In.", new_user_session_path %> |
<% else %>
  <%= link_to "my account", user_path(current_user) %> |
  <%= link_to 'lines', lines_path %> |
  <%= link_to 'mines', mine_lines_path %> |
  <%= link_to 'my peeps', user_groups_path(current_user) %>
  <%= link_to "time to log out and go open somebody", user_session_path, :method => :delete, :confirm => "for real you want to logout? better go open somebody" %>
<% end %>
<br>
