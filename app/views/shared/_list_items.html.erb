<% list_items.each do |item| %>
  <hr class="list_item <%= item.item.class.name.underscore %>">
  <% div_for item.item, dom_id(list) do %>
	  <%= item.item.name %>
  <% end %>
  <script type='text/javascript'>
		new Draggable(<%= dom_id(item.item, dom_id(list)) %>, {revert: true, scroll: window});
  </script>
<% end %>
