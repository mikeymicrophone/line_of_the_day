<h1>got a line you're proud of? publish it to your people then.</h1>

<% form_for(@publication) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :text, 'your introduction or advice if any' %><br />
    <%= f.text_area :text, :size => '40x3' %>
  </p>
  <p>
    <%= f.label :line_id %><br />
    <%= f.select :line_id, current_user.lines.map { |l| [l.name, l.id] } %>
  </p>
  <p>
    <%= f.label :group_id %><br />
    <%= f.select :group_id, current_user.cliques.map { |g| [g.name, g.id] } %>
  </p>
  <p>
    <%= f.submit 'yep, share' %>
  </p>
<% end %>

<%= link_to 'other shouts', publications_path %>