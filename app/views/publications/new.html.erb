<% form_for(@publication) do |f| %>
  <%= @publication.line.phrasing %>
  <p>
    <%= f.label :text, 'your introduction or advice' %><br>
    <%= f.text_area :text, :size => '20x3' %>
  </p>
    <%= f.hidden_field :line_id %>
  <p>
		<% current_user.cliques.each do |group| %>
		  <%= check_box_tag 'publication[group_id][]', group.id, nil, {} %><%= f.label :group_id, group.name %><br>
		<% end %>
  </p>
  <p>
    <%= f.submit 'share' %>
  </p>
<% end %>