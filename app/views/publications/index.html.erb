<h1>publications</h1>

<table>
<% @publications.each do |publication| %>
  <tr>
    <td><%=h publication.text %></td>
    <td><%= link_to truncate(publication.line.text, 80), publication.line %></td>
    <td><%= link_to publication.group.name, publication.group %></td>
    <td><%= link_to publication.user.username, publication.user %></td>
    <td><%= link_to 'see', publication %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'publish one of my lines to one of my groups', new_publication_path %>