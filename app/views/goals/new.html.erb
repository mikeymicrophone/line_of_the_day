<% form_for @goal do |f| %>
  I intend to <%= @goal.describe %>
	<%= f.text_field :repetitions, :size => 2 %><%= f.label :repetitions, 'times' %>
	in the next <%= f.text_field :days, :size => 2 %><%= f.label :days, 'days.' %>
	<%= f.submit :promise %>
	<%= f.hidden_field :objective_type %><%= f.hidden_field :objective_id %>
<% end %>