<% div_for book, :class => 'borderedbox' do %>
  <%= voting_booth book %>
  <%= link_to book.title, book %>
  by <%= book.author %>
  <%= link_to_comment_section_for book %>
  <%= tag_display book %>
  <%= tagger book %>
  <% div_for(book, 'tags', :style => 'display:none') {} %>
  <%= comment_section_for book %>
<% end %>
<%= draggable_and_droppable_for book %>