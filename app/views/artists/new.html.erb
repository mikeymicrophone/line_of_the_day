<% form_for @artist do |f| %>
	<%= f.text_field :name %><%= f.label :name %><br>
	<%= f.text_field :alias %><%= f.label :alias %><br>
	<%= f.text_field :email %><%= f.label :email %><br>
	<%= f.select :company_id, Company.all.map { |c| [c.name, c.id] }, :include_blank => true %><%= f.label :company_id %><br>
	<%= f.submit :save %>
<% end %>