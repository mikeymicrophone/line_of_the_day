<% div_for artist, :class => 'borderedbox' do %>
  <%= voting_booth artist %>
	<%= link_to artist.preferred_name, artist %>
  <%= link_to_comment_section_for artist %>
	<%= tag_display artist %>
	<% if current_user.andand.admin? %>
	  [<%= link_to 'x', artist_path(artist), :method => :delete, :title => 'delete' %>]
	<% end %>
	<%= tagger artist %>
	<% div_for(artist, 'tags', :style => 'display:none') {} %>
	<%= comment_section_for artist %>
<% end %>
<%= draggable_and_droppable_for artist %>