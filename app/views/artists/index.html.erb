"Artist" = conversation coach/blogger
<% @artists.each do |a| %>
  <% div_for a do %>
	  <%= voting_booth a %>
		<%= link_to a.preferred_name, a %>
		<%= add_to_list a %>
		<%= tagger a %>
		<%= tag_display a %>
		<% if current_user.andand.admin? %>
		  [<%= link_to 'x', artist_path(a), :method => :delete, :title => 'delete' %>]
		<% end %>
	<% end %>
<% end %>
<%= will_paginate @artists %>
