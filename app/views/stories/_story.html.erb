<% div_for story, :class => 'borderedbox' do %>
	<%= voting_booth story %>
	<%= link_to story.name, story %>
  <%= 'at ' + link_to(story.scene.name, story.scene) if story.scene %>
  <%= link_to_comment_section_for story %>
  <%= tag_display story %>
	<% if current_user.andand.admin? || (current_user && story.user == current_user) %>
	  [<%= link_to 'x', story_path(story), :method => :delete, :title => 'delete' %>]
	<% end %>
	<%= tagger story %>
	<hr>
	<%= story.telling %>
	<% div_for(story, 'tags', :style => 'display:none') {} %>
	<%= comment_section_for story %>
<% end %>
<%= draggable_and_droppable_for story %>