<%= @list.name %><br>
<% div_for @list, 'items' do %>
	<% @list.list_items.each do |item| %>
	  <%= voting_booth item %>
	  <% if @list.user == current_user %>
		  <%= link_to '+', elevate_list_item_path(item), :method => :put unless item.first? %>
		  <%= link_to '-', lower_list_item_path(item), :method => :put unless item.last? %>
		<% end %>
	  <%= link_to item.item.list_display, item.item %>
	  <%= link_to 'x', list_item_path(item), :method => :delete if current_user == @list.user %>
  <% end %>
<% end %>