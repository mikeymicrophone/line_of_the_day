<% div_for exercise, :class => 'borderedbox' do %>
  <%= voting_booth exercise %>
	<%= exercise.moniker %><hr>
	<%= exercise.instruction %>
	<%= link_to_comment_section_for exercise %>
	<%= tagger exercise %>
	<%= tag_display exercise %>
	<% if current_user.andand.admin? %>
	  [<%= link_to 'x', exercise_path(exercise), :method => :delete, :title => 'delete' %>]
	<% end %>
	<% div_for exercise, 'tags', :style => 'display:none;' do %>
	<% end %>
	<%= comment_section_for exercise %>
<% end %>
<%= draggable_and_droppable_for exercise %>