<h1>a line?</h1>

<% form_for(@line) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :text, 'your opening line' %><br />
    <%= f.text_area :text, :size => '49x3' %>
  </p>
  <p>
    <%= f.label :context, 'what was happening' %><br />
    <%= f.text_area :context, :size => '49x5' %>
  </p>
  <p>
    <%= f.submit 'yeah!' %>
  </p>
<% end %>

<%= link_to 'celebration', lines_path %>