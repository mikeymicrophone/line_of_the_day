<% div_for line do %>
  <span class='left'><%= link_to h(line.phrasing), line %>[<%= link_to line.comments.count, line_comments_path(line) %>]</span>
  <span class='pick-up-artist'><%=h line.user.andand.username %></span>
  <div class='clearfix'></div>
  <span class='right'><%=h line.context %></span>
  <span class='left'><%= link_to_remote 'publish', :url => line_publications_path(line), :with => "'group_ids=' + $('publishable-groups').innerHTML", :update => 'publications', :position => 'top' if current_user && (line.user == current_user || line.repost?) %></span>
  <span class='left'><%= publicize_link line %></span>
<% end %>
<div class='clearfix'></div>