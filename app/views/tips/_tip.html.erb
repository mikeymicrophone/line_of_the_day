<% div_for tip, :class => 'borderedbox' do %>
	<%= voting_booth tip %>
	<%= tip.advice %>
	<%= link_to_comment_section_for tip %>
	<%= tag_display tip %>
	<% if current_user.andand.admin? %>
	  [<%= link_to 'x', tip_path(tip), :method => :delete, :title => 'delete' %>]
	<% end %>
	<%= tagger tip %>
	<% div_for tip, 'tags', :style => 'display:none;' do %>
	<% end %>
	<%= comment_section_for tip %>
<% end %>
<%= draggable_and_droppable_for tip %>