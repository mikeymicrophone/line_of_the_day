<% div_for tip, :class => 'borderedbox' do %>
	<%= voting_booth tip %>
	<%= link_to tip.advice, tip %>
	<%= add_to_list tip %>
	<%= link_to pluralize(tip.comments.count, 'comment'), tip unless tip.comments.count == 0 %>
	<%= tagger tip %>
	<%= tag_display tip %>
	<% if current_user.andand.admin? %>
	  [<%= link_to 'x', tip_path(tip), :method => :delete, :title => 'delete' %>]
	<% end %>
<% end %>